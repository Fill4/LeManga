{
	"manifest_version": 2,

	"name": "Le Manga",
	"description": "Get le mangas",
	"version": "0.1",
	"icons" : {
		"16" : "icons/icon1_16.png",
		"32" : "icons/icon1_32.png",
		"128" : "icons/icon1_128.png"
	},
	"background": {
		"scripts": ["src/eventScript.js"],
		"persistent": false
	},
	"browser_action": {
		"default_icon": "icons/icon_manga.png",
		"default_popup": "src/popup.html"
	},
	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"js": ["src/jquery.js", "src/checkPage.js"]
		}
	],
	"permissions": [
		"tabs",
		"activeTab",
		"https://*/*",
		"http://*/*",
		"https://ajax.googleapis.com/"
	],
	"content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}