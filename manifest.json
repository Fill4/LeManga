{
	"manifest_version": 2,

	"name": "Le Manga",
	"description": "Get le mangas",
	"version": "0.1",
	
	"browser_action": {
		"default_icon": "icons/icon1_32.png",
		"default_popup": "src/popup.html"
	},
	"content_scripts": [
		{
			"matches": ["http://readms.net/*"],
			"js": ["src/jquery.js", "src/contentScript.js"]
		}
	],
	"permissions": [
		"activeTab",
		"https://ajax.googleapis.com/"
	],
	"content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}